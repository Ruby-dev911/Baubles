
/*header Styles*/

header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-family: "Glass Antiqua";
  height: 76px;
  line-height: 1.4;
  background-color: white;
  padding-left: 30px;
  padding-right: 20px;
  color: black;
}

header a:visited {
  color:#11465d;
}


nav a {
    list-style-type: none;
    text-decoration: none;
    color: black;
    margin-right: 30px;
}

ul li {
  display: inline-block;
  padding-right: 20px;
  text-decoration: none;
  margin: 0px;
}

a:hover {
  text-shadow: 1px 1px 2px grey,
  0 0 1em rgb(41, 41, 216),
  0 0 0.4em rgb(41, 41, 216);
  color: white;
}

a:visited {
  color:#11465d;
}

.icon {
  margin-right: 30px;
  width: 2rem;
  height: 2rem;
  padding-left: 30px;
  flex: 1;

}
#logo a {
  text-decoration: none;
}

h1 {
    font-family: "Rubik Moonrocks", sans-serif;
    font-weight: 400;
    font-size: 48px;
    text-align: center;
    background-color: white;
}

/*Body styles*/

Body {
    background-color: rgb(140, 13, 8);
    margin-top: 0px;
    margin-left: 0px;
    margin-right: 0px;
}

.container {
    width: auto;
    display: inline-flex;
    border-radius: 4px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding-top: 10px;
}

.box {
    background-color: rgb(21,96,130);
    border: 1px solid white;
    border-radius: 4px;
    margin-left: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    align-content: center;
}

.box:hover {
    box-shadow: 1px 1px 1px white,
    0 0 1em white,
    0 0 0.4em white;
    color: white;
    opacity: 0.8;
}

img {
    height: 285px;
    width: auto;
    border-radius:5px;
    margin-bottom: 5px;
    flex-grow: 1;
}

h2 {
    font-family: "Glass Antiqua";
    color: white;
    text-align: center;
    font-size: 20px;
}

/* Staff */

.profile {
  display: inline-flex;
  background-color: khaki;
  flex-grow: 2;
}

.profile h3 {
  width: 100%;
  margin: 10px;
  color: black;
  line-height: 90px;
  font-size: 24px;
}
                              
